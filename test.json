
{
    "version": 3,
    "name": "simpleapi gw",
    "endpoints": [
        {
            "endpoint": "/health",
            "extra_config": {
                "proxy": {
                    "static": {
                        "data": {
                            "custom": "response",
                            "foo": "bar"
                        },
                        "strategy": "always"
                    }
                }
            },
            "backend": [
                {
                    "url_pattern": "/__health",
                    "host": [
                        "http://localhost:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/product/{id}",
            "method": "GET",
            "output_encoding": "no-op",
            "extra_config": {},
            "backend": [
                {
                    "url_pattern": "/{id}",
                    "encoding": "no-op",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": true,
                    "extra_config": {},
                    "host": [
                        "http://host.docker.internal:5001"
                    ]
                }
            ]
        },
        {
            "endpoint": "/category/all",
            "method": "GET",
            "output_encoding": "no-op",
            "extra_config": {},
            "backend": [
                {
                    "url_pattern": "/all",
                    "encoding": "no-op",
                    "sd": "static",
                    "method": "GET",
                    "extra_config": {},
                    "host": [
                        "http://host.docker.internal:5000"
                    ],
                    "disable_host_sanitize": true
                }
            ]
        }
    ]
}